<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/makesurvey" class="btn btn-default btn-sm">Make a New Survey</a>
    </div>

    <div class="row">
        <%=yelpData%>
        <%=yelpDataString%>
        What now
        <!-- MY SURVEYS -->
        <div class="col-sm-8">
             <div class="well">
                <h3><span class="fa fa-user"></span>Next Bar</h3>
                <div class="row">
                    <%yelpData.forEach(function(entry, k){%>
                    <div class="col-sm-9"><%=entry.name%></div>
                    <div class="col-sm-9"><%=entry.location.address1%> <%=entry.location.city%>,<%=entry.location.state%> <%=entry.location.zip_code%></div>
                    <div class="col-sm-9"><%=entry.name%></div>
                    <div class="col-sm-3"><a id='<%=entry._id%>'class='surveyQuestion'><%=entry.responseCount%></a></div>
                    <%}})%> 
                </div>
            </div>
        </div>
        
    </div>
</div>
</body>
</html>
